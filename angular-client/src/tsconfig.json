{
  "compilerOptions": {
    "baseUrl": "",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "paths": {
      "@modules/*": ["app/modules/*"],
      "@shared/*": ["app/shared/*"],
      "@stubs/*": ["app/stubs/*"],

      "@shared-models": ["app/shared/models/index.ts"],
      "@shared-services": ["app/shared/services/index.ts"],
      "@stubs-models": ["app/stubs/index.ts"],
      "@stubs-services": ["app/stubs/index.ts"]
    }
  }
}
